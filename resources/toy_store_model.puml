@startuml
title Toy Store Lottery System - Class Diagram

class Toy {
    - toyId: String
    - name: String
    - weight: int

    + Toy(toyId: String, name: String, weight: int)
    + getToyId(): String
    + getName(): String
    + getWeight(): int
}

class ToyStore {
    - toyQueue: PriorityQueue<Toy>
    - random: Random
    - fileWriter: FileWriter

    + ToyStore()
    + addToy(toy: Toy): void
    + getLotteryResults(): void
    - getRandomToy(): Toy
}

class Main {
    + main(args: String[]): void
}

User --> Main: Uses
Main --> ToyStore: Creates
Main --> Toy: Uses
ToyStore --> Toy: Uses

@enduml
